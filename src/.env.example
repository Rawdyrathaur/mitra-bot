# Database Configuration - SQLite for production (immediate deployment)
DATABASE_URL=sqlite:///sam_bot_production.db
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration - Will gracefully degrade without Redis
REDIS_URL=redis://localhost:6379/0
SESSION_EXPIRATION=86400
HISTORY_LIMIT=50

# OpenAI Configuration - Replace with your actual API key
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
MAX_CONTEXT_TOKENS=3000
MAX_RESPONSE_TOKENS=500
CONFIDENCE_THRESHOLD=0.6

# JWT Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here

# Flask Configuration
FLASK_ENV=production
PORT=5000
ALLOWED_ORIGINS=*

# Application Settings
MAX_FILE_SIZE=16777216
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.1
MAX_SEARCH_RESULTS=10
CONVERSATION_CONTEXT_WINDOW=5

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_FEEDBACK=true
ENABLE_WEBHOOKS=true

# Security Settings
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT_HOURS=24
RATE_LIMIT_PER_MINUTE=60

# Monitoring
LOG_LEVEL=INFO