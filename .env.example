# ==============================================
# CRITICAL: CHANGE ALL DEFAULT VALUES IN PRODUCTION
# ==============================================

# Database Configuration
# REQUIRED: Use PostgreSQL with pgvector extension for production
DATABASE_URL=postgresql://mitra_user:CHANGE_THIS_PASSWORD@localhost:5432/mitra_db
# Optional: For connection pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis Configuration
# REQUIRED: For session management and caching
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# OpenAI Configuration
# REQUIRED: Your OpenAI API key
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
MAX_RESPONSE_TOKENS=500
CONFIDENCE_THRESHOLD=0.6

# Flask Configuration
# CRITICAL: Change these in production!
FLASK_ENV=production
JWT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_STRING
SECRET_KEY=CHANGE_THIS_TO_A_DIFFERENT_RANDOM_64_CHARACTER_STRING
JWT_ACCESS_TOKEN_EXPIRES=86400

# Security Settings
# CRITICAL: Set proper CORS origins for production
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
PASSWORD_MIN_LENGTH=12
ENABLE_RATE_LIMITING=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# File Upload Settings
MAX_FILE_SIZE=16777216
ALLOWED_EXTENSIONS=pdf,docx,txt,html
UPLOAD_FOLDER=/var/mitra/uploads

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.15

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/mitra/app.log
DB_ECHO=false
ENABLE_REQUEST_LOGGING=true

# Server Configuration
PORT=5000
HOST=0.0.0.0
WORKERS=4

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_FEEDBACK=true
ENABLE_MONITORING=true

# Monitoring (Optional - for Sentry, etc.)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Performance Settings
CONVERSATION_CONTEXT_WINDOW=10
MAX_SEARCH_RESULTS=20
CACHE_TTL=3600

# Data Retention (GDPR Compliance)
DATA_RETENTION_DAYS=365
SESSION_RETENTION_DAYS=30
